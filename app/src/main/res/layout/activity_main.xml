<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/To"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18pt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="Total"/>
    <LinearLayout
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선택"
            android:textSize="13pt"/>
        <EditText
            android:id="@+id/prise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Prise"
            android:textSize="9pt"/>
        <CheckBox
            android:id="@+id/set"
            android:text="set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <CheckBox
            android:id="@+id/sCoke"
            android:text="Coke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <CheckBox
            android:id="@+id/sCider"
            android:text="Cider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <CheckBox
            android:id="@+id/sRamu"
            android:text="Ramune"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <CheckBox
            android:id="@+id/sWine"
            android:text="Wine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <CheckBox
            android:id="@+id/sRime"
            android:text="Calamansi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <CheckBox
            android:id="@+id/pick"
            android:text="Pickle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <CheckBox
            android:id="@+id/plus"
            android:text="Plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <CheckBox
            android:id="@+id/coke"
            android:text="Coke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <CheckBox
            android:id="@+id/cider"
            android:text="Cider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <CheckBox
            android:id="@+id/ramu"
            android:text="Ramune"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <CheckBox
            android:id="@+id/wine"
            android:text="Wine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <CheckBox
            android:id="@+id/rime"
            android:text="Calamansi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>